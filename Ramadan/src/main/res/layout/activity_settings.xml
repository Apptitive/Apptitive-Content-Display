<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.apptitive.ramadan.AboutUsActivity">

    <LinearLayout
        android:id="@+id/custom_actionbar"
        android:background="@color/AB_Green_Ramadan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_action_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/selectable_background_ramadan">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/abc_ic_ab_back_holo_light" />

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:clickable="false"
                android:src="@drawable/ic_action_settings" />
            <com.apptitive.ramadan.views.BanglaTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                app:banglaText="@string/title_activity_settings"
                android:layout_gravity="center_vertical"
                app:fontName="@string/font_solaimanlipi" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
