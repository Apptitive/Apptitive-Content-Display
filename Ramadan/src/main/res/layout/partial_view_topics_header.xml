<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/AB_Green_Ramadan">

    <ImageView
        android:id="@+id/imageView_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_saom" />

    <com.apptitive.ramadan.views.BanglaTextView
        android:id="@+id/btv_topic_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_topic"
        android:layout_centerVertical="true"
        app:fontName="@string/font_solaimanlipi"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/white" />
</RelativeLayout>