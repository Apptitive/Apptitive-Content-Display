<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ContentItemHeaderBg">

    <ImageView
        android:id="@+id/imageView_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/ic_saom" />

    <TextView
        android:id="@+id/textView_content_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView_topic"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_20"
        android:textColor="@color/ContentItemHeaderText" />
</RelativeLayout>