<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:key="@string/pref_key_alarm_settings">
        <RingtonePreference
            android:defaultValue="content://settings/system/alarm_alert"
            android:key="@string/pref_key_alarm_ringtone"
            android:ringtoneType="alarm"
            android:title="@string/pref_title_ringtone"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_alarm_vibrate"
            android:title="@string/pref_title_vibrate" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pref_key_location_settings"
        android:title="@string/title_location">
        <ListPreference
            android:defaultValue="Dhaka"
            android:key="@string/pref_key_location"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/title_location_setting" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/pref_key_about_us"
        android:title="@string/title_about_us">
        <Preference
            android:key="@string/pref_key_preference_about_us"
            android:summary="about us" />
    </PreferenceCategory>

</PreferenceScreen>
