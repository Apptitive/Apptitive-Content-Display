<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- All colors -->
    <color name="ActionBarHomeBg">@color/AB_White_ContentDisplay</color>
    <color name="ActionBarInnerBg">@color/AB_Green_ContentDisplay</color>

    <color name="ActionBarDropDownItemBg">@color/ActionBar_Navigation</color>
    <color name="ActionBarDropDownItemText">@color/white</color>

    <color name="MenuBg">@color/black</color>
    <color name="MenuPressedBg">@color/table_row_selected</color>
    <color name="MenuText">@color/white</color>

    <color name="TableHeaderBg">@color/table_header_bg</color>
    <color name="TableHeaderText">@color/black</color>
    <color name="TableEvenRowBg">@color/table_even_row_bg</color>
    <color name="TableOddRowBg">@color/white</color>
    <color name="TableSelectedRowBg">@color/table_row_selected</color>
    <color name="TableRowText">@color/black</color>

    <color name="ContentItemHeaderBg">@color/AB_Green_ContentDisplay</color>
    <color name="ContentItemHeaderText">@color/white</color>
    <color name="ContentItemBriefBg">@color/black</color>
    <color name="ContentItemBriefPressedBg">@color/table_row_selected</color>
    <color name="ContentItemBriefText">@color/white</color>
    <color name="ContentItemBriefDivider">@color/white_20_transparent</color>

    <color name="NavDrawerListItemText">@color/white</color>
    <color name="NavDrawerListItemBg">@color/black</color>
    <color name="NavDrawerListItemPressedBg">@color/ActionBar_Navigation</color>
    <color name="NavDrawerListItemSelected">@color/ActionBar_Navigation</color>
    <color name="NavDrawerListDivider">@color/white_20_transparent</color>
    <color name="NavDrawerListBg">@color/black_90</color>

    <color name="ContentDetailFragmentBg">@color/black_80</color>

    <style name="Theme.ContentDisplay" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ramadan</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.ContentDisplay</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.ContentDisplay</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.ContentDisplay</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.ContentDisplay</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.ContentDisplay</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ramadan</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ramadan</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.ContentDisplay</item>
    </style>

    <style name="ActionBar.Solid.ContentDisplay" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_ramadan</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ramadan</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ramadan</item>
        <item name="android:progressBarStyle">@style/ProgressBar.ContentDisplay</item>
    </style>

    <style name="ActionBar.Transparent.ContentDisplay" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:progressBarStyle">@style/ProgressBar.ContentDisplay</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:titleTextStyle">@style/TitleText.ContentDisplay</item>
    </style>

    <style name="TitleText.ContentDisplay" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.ContentDisplay.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.ContentDisplay</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.ContentDisplay</item>
    </style>

</resources>