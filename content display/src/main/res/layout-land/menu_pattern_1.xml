<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ViewStub
            android:id="@+id/sub_pattern_left_top"
            android:inflatedId="@+id/inflated_sub_pattern_left_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4" />

        <ViewStub
            android:id="@+id/sub_pattern_left_bottom"
            android:inflatedId="@+id/inflated_sub_pattern_left_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ViewStub
            android:id="@+id/sub_pattern_right"
            android:inflatedId="@+id/inflated_sub_pattern_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_4" />
    </LinearLayout>


</LinearLayout>