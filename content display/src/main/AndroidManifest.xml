<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apptitive.content_display"
    android:versionCode="1"
    android:versionName="first release">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_ramadan"
        android:label="@string/app_name"
        android:theme="@style/Theme.Ramadan">
        <activity
            android:name="com.apptitive.content_display.MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.apptitive.content_display.DetailsActivity"
            android:parentActivityName="com.apptitive.content_display.TopicsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apptitive.ramadan.TopicsActivity" />
        </activity>
        <activity
            android:name="com.apptitive.content_display.SettingsActivity"
            android:parentActivityName="com.apptitive.content_display.MainActivity"></activity>
        <activity
            android:name="com.apptitive.content_display.TopicsActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.apptitive.content_display.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apptitive.ramadan.MainActivity" />
        </activity>
        <activity
            android:name="com.apptitive.content_display.SehriIfterActivity"
            android:parentActivityName="com.apptitive.content_display.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apptitive.ramadan.MainActivity" />
        </activity>
        <activity
            android:name="com.apptitive.content_display.SaomVongerKaronActivity"
            android:parentActivityName="com.apptitive.content_display.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apptitive.ramadan.MainActivity" />
        </activity>
        <activity
            android:name="com.apptitive.content_display.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.apptitive.content_display.BaseActionBar"></activity>
        <activity
            android:name="com.apptitive.content_display.AlarmActivity"
            android:theme="@android:style/Theme.Dialog"></activity>

        <service
            android:name="com.apptitive.content_display.services.RingtoneService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="com.apptitive.content_display.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name="com.apptitive.content_display.receiver.NotificationCancelReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="notification_cancelled" />
            </intent-filter>
        </receiver>
        <receiver
            android:icon="@drawable/widget_timetable"
            android:label="@string/widget_label"
            android:name="com.apptitive.content_display.receiver.TimeTableWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <!-- Used for Google Play Store Campaign Measurement-->
        <service android:name="com.google.analytics.tracking.android.CampaignTrackingService" />
        <receiver
            android:name="com.google.analytics.tracking.android.CampaignTrackingReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
